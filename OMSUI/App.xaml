<Application x:Class="OrderManagerDesktopUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:OrderManagerDesktopUI"
             xmlns:vm="clr-namespace:OrderManagerDesktopUI.ViewModels"
             xmlns:view="clr-namespace:OrderManagerDesktopUI.Views">

    <Application.Resources>

        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/BorderTheme.xaml"/>
                <ResourceDictionary Source="/Themes/ComboBoxTheme.xaml"/>
                <ResourceDictionary Source="/Themes/DatagridTheme.xaml"/>
                <ResourceDictionary Source="/Themes/MenuTheme.xaml"/>
                <ResourceDictionary Source="/Themes/SearchBoxTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type TypeName=vm:NewOrderViewModel}">
                <view:NewOrderView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type TypeName=vm:DashboardViewModel}">
                <view:DashBoardView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type TypeName=vm:NoteViewModel}">
                <view:NoteView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type TypeName=vm:NewOrderDetailsViewModel}">
                <view:NewOrderDetailsView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type TypeName=vm:OrdersViewModel}">
                <view:OrdersView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type TypeName=vm:ProductsViewModel}">
                <view:ProductsView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type TypeName=vm:CustomersViewModel}">
                <view:CustomersView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type TypeName=vm:SalesDataViewModel}">
                <view:SalesDataView/>
            </DataTemplate>

        </ResourceDictionary>
    </Application.Resources>
</Application>
