<UserControl x:Class="OrderManagerDesktopUI.Views.NewOrderDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OrderManagerDesktopUI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid DataContext="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:NewOrderView}}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="*"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Add PickUp or Delivery" 
                   FontWeight="Regular"
                   HorizontalAlignment="Center"
                   Margin="0"
                   Grid.Row="0"/>

        <!-- Delivery Date -->
        <DatePicker  Grid.Row="1"
                     HorizontalAlignment="Stretch"
                     SelectedDate="{Binding DataContext.PickUpDate,UpdateSourceTrigger=PropertyChanged}"
                     Margin="20 5 20 0"/>

        <!-- Delivery Time -->
        <TextBox Grid.Row="2" 
                 Text="{Binding DataContext.PickUpTime, StringFormat={}{0:t}, UpdateSourceTrigger=PropertyChanged}"
                 Margin="20 5 20 0"/>

        <!-- Select Delivery CheckBox -->
        <CheckBox Grid.Row="3" 
                  Content="Deliver to address"
                  IsChecked="{Binding Path=DataContext.IsDelivery, UpdateSourceTrigger=PropertyChanged}"
                  Margin="20 10 20 0"/>

        <Grid Grid.Row="4" Background="White" Margin="20 5 20 0">
            <!-- overlay with hint text -->
            <TextBlock Margin="5,2" Text="Location" 
                       Visibility="{Binding ElementName=txtLocationBox, Path=Text.IsEmpty, Converter={StaticResource MyBoolToVisibilityConverter}}" 
                       IsHitTestVisible="False" />
            <TextBox Text="{Binding DataContext.Location, UpdateSourceTrigger=PropertyChanged}"
                     TextWrapping="Wrap" Name="txtLocationBox" Background="Transparent" VerticalContentAlignment="Center"/>
        </Grid>

        <TextBlock Grid.Column="1" Grid.Row="0" 
                   Text="Register Payment" 
                   FontWeight="Regular"
                   HorizontalAlignment="Center"
                   Margin="0"/>

        <ComboBox Grid.Column="1" Grid.Row="1" 
                  ItemsSource="{Binding DataContext.PaymentMethodsCollectionView, UpdateSourceTrigger=PropertyChanged}"
                  SelectedItem="{Binding DataContext.SelectedPaymentMethod, UpdateSourceTrigger=PropertyChanged}"
                  DisplayMemberPath="Name"
                  Margin="20 5 20 0"/>

        <TextBox Grid.Column="1" Grid.Row="2"
                 Text="{Binding DataContext.PaymentAmount, StringFormat={}{0:C2}, UpdateSourceTrigger=PropertyChanged}"
                 Margin="20 5 20 0"/>
        
        <StackPanel Grid.Column="1" Grid.Row="3" Grid.RowSpan="2" Orientation="Horizontal" Margin="20 5 20 0">
            <Button Content="Save payment" 
                    Style="{StaticResource addButton}"
                    Command="{Binding DataContext.AddPaymentCommand}"/>

            <Button Content="Reset all payments" 
                    Style="{StaticResource addButton}"
                    Command="{Binding DataContext.ResetPaymentsToOrderCommand}"/>
        </StackPanel>

    </Grid>
</UserControl>
