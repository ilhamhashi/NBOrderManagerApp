<UserControl x:Class="OrderManagerDesktopUI.Views.NewOrderDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OrderManagerDesktopUI.Views" xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1280">

    <Grid DataContext="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:NewOrderView}}" 
            HorizontalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="40*"/>
        </Grid.RowDefinitions>

        <Border Style="{StaticResource whiteBorder}"
                Margin="0 0 7 0"
                Background="#d1f0e5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="40*"/>
                    <RowDefinition Height="60*"/>
                </Grid.RowDefinitions>

                <!-- Header for order details -->
                <TextBlock Text="Order Details"
                       FontSize="20"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

                <!-- Add a customer to order -->
                <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0 40 0 0">
                    <Button Style="{StaticResource addButton}" 
                            Width="130" Height="25" Margin="10">
                        <StackPanel Orientation="Horizontal">
                            <Icon:PackIconMaterial Kind="AccountPlusOutline" Margin="0 0 10 0"/>
                            <TextBlock Text="Add Customer"/>
                        </StackPanel>
                    </Button>
                    <TextBlock Text="Customer Fullname" 
                               HorizontalAlignment="Center" />
                    <!-- {Binding SelectedCustomer.FullName, UpdateSourceTrigger=PropertyChanged}"-->
                    <TextBlock Text="Customer PhoneNumber"
                               HorizontalAlignment="Center" />
                    <!-- {Binding SelectedCustomer.PhoneNumber, UpdateSourceTrigger=PropertyChanged}" -->
                </StackPanel>

                <StackPanel Grid.Row="2" HorizontalAlignment="Center" >
                    <!-- Select Delivery CheckBox -->
                    <CheckBox Margin="10"
                   HorizontalAlignment="Center"
                   Content="Deliver to address"
                   IsChecked="{Binding Path=IsDelivery, UpdateSourceTrigger=PropertyChanged}"/>

                    <!-- Delivery Address TextBox -->
                    <TextBox Margin="10"
                         Width="200" Height="25"
                         IsEnabled="{Binding ElementName=DeliveryCheckBox, Path=IsChecked}"
                         Text="{Binding CollectionNeighborhood, UpdateSourceTrigger=PropertyChanged}"/>

                    <!-- Delivery Date -->
                    <DatePicker Margin="10" 
                                Grid.Row="4"
                            Width="200" Height="25"                          
                            SelectedDate="{Binding CollectionDateTime,
                            UpdateSourceTrigger=PropertyChanged}"/>

                    <!-- Delivery Time -->
                    <TextBox Margin="10"
                         Width="200" Height="25"
                         IsEnabled="{Binding ElementName=DeliveryCheckBox, 
                         Path=IsChecked}"
                         Text="{Binding CollectionDateTime,
                         UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- <<<Note Section>>> -->
        <Border Style="{StaticResource whiteBorder}" 
                Grid.Row="1"
                Grid.ColumnSpan="2"
                Margin="0 15 0 0"
                Background="#d1f0e5">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="8*"/>
                    <RowDefinition Height="8*"/>
                    <RowDefinition Height="8*"/>
                    <RowDefinition Height="8*"/>
                    <RowDefinition Height="8*"/>
                    <RowDefinition Height="8*"/>
                </Grid.RowDefinitions>

                <!-- Header for order details -->
                <TextBlock Text="Notes"
                       FontSize="20"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
