<UserControl x:Class="OrderManagerDesktopUI.Views.CustomersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <!-- Rund TextBox -->
        <Style TargetType="TextBox" x:Key="RoundedTextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Rund Button -->
        <Style TargetType="Button" x:Key="RoundedButton">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- VENSTRE: Customer list + søg -->
        <Border Background="White" BorderBrush="Gray" BorderThickness="1" CornerRadius="15" Grid.Column="0">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
                    <TextBlock Text="Search:" VerticalAlignment="Center" FontSize="16" FontFamily="Segoe UI" FontWeight="Bold" Foreground="Black" Margin="0,0,8,0"/>
                    <TextBox Width="200" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource RoundedTextBox}" VerticalContentAlignment="Center"/>
                </StackPanel>

                <Border Background="#F5F5F5" CornerRadius="10" Padding="5" Grid.Row="1">
                    <ListBox ItemsSource="{Binding Customers}"
                             SelectedItem="{Binding SelectedCustomer}"
                             DisplayMemberPath="FullName"
                             FontFamily="Segoe UI" FontWeight="Bold" Foreground="Black"
                             Background="Transparent" BorderThickness="0"/>
                </Border>

                <DataGrid ItemsSource="{Binding CustomersCollectionView, UpdateSourceTrigger=PropertyChanged}"
                          SelectedItem="{Binding SelectedCustomer, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                          IsReadOnly="True" Grid.Row="1">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Customer Id" Binding="{Binding CustomerId}" Width="*"/>
                        <DataGridTextColumn Header="First name" Binding="{Binding FirstName}" Width="*"/>
                        <DataGridTextColumn Header="Last name" Binding="{Binding LastName}" Width="*"/>
                        <DataGridTextColumn Header="Phone number" Binding="{Binding PhoneNumber}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

            </Grid>
        </Border>

        <!-- HØJRE: Create + Edit -->
        <Grid Grid.Column="1" Margin="10,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <!-- Create Customer -->
            <Border Background="#E0E0E0" BorderBrush="Gray" BorderThickness="1" CornerRadius="15" Margin="0,0,0,10">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Create Customer" FontSize="18" FontFamily="Segoe UI" FontWeight="Bold" Foreground="Black" Grid.Row="0" Margin="0,0,0,10"/>

                    <!-- FIRST NAME -->
                    <TextBlock Text="First name" FontSize="14" FontFamily="Segoe UI" FontWeight="Bold" Foreground="Black" Grid.Row="1"/>
                    <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource RoundedTextBox}" Grid.Row="2" Height="25"/>

                    <!-- LAST NAME -->
                    <TextBlock Text="Last name" FontSize="14" FontFamily="Segoe UI" FontWeight="Bold" Foreground="Black" Grid.Row="3" Margin="0,-5,0,0"/>
                    <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource RoundedTextBox}" Grid.Row="4" Height="25"/>

                    <!-- PHONE -->
                    <TextBlock Text="Phone number" FontSize="14" FontFamily="Segoe UI" FontWeight="Bold" Foreground="Black" Grid.Row="5" Margin="0,-6,0,0"/>
                    <TextBox Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource RoundedTextBox}" Grid.Row="6" Height="70"/>

                    <Button Content="Opret" Command="{Binding CreateCustomerCommand}" Background="#607D8B" Style="{StaticResource RoundedButton}" Grid.Row="7" Margin="0,6,0,0"/>
                </Grid>
            </Border>

            <!-- Edit Customer -->
            <Border Background="#E0E0E0" BorderBrush="Gray" BorderThickness="1" CornerRadius="15" Grid.Row="1">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Edit Customer" FontSize="18" FontFamily="Segoe UI" FontWeight="Bold" Foreground="Black" Grid.Row="0" Margin="0,0,0,10"/>

                    <!-- FIRST NAME -->
                    <TextBlock Text="First name" FontSize="14" FontFamily="Segoe UI" FontWeight="Bold" Foreground="Black" Grid.Row="1"/>
                    <TextBox Text="{Binding SelectedCustomer.FirstName, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource RoundedTextBox}" Grid.Row="2" Height="25"/>

                    <!-- LAST NAME -->
                    <TextBlock Text="Last name" FontSize="14" FontFamily="Segoe UI" FontWeight="Bold" Foreground="Black" Grid.Row="3" Margin="0,-5,0,0"/>
                    <TextBox Text="{Binding SelectedCustomer.LastName, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource RoundedTextBox}" Grid.Row="4" Height="25"/>

                    <!-- PHONE -->
                    <TextBlock Text="Phone number" FontSize="14" FontFamily="Segoe UI" FontWeight="Bold" Foreground="Black" Grid.Row="5" Margin="0,-6,0,0"/>
                    <TextBox Text="{Binding SelectedCustomer.PhoneNumber, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource RoundedTextBox}" Grid.Row="6" Height="70"/>

                    <Button Content="Rediger" Command="{Binding EditCustomerCommand}" Background="#5C6BC0" Style="{StaticResource RoundedButton}" Grid.Row="7" Margin="0,6,0,0"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>